<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.DeptEntity2" table="dept" schema="public" catalog="Employees">
        <id name="deptno">
            <column name="deptno" sql-type="integer"/>
        </id>
        <property name="dname">
            <column name="dname" sql-type="varchar(14)" length="14" not-null="true"/>
        </property>
        <property name="loc">
            <column name="loc" sql-type="varchar(13)" length="13" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>